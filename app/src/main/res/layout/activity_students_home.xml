<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawable_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanelActivity"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/main_page_toolbar"
            layout="@layout/app_bar_layout"
            />



        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_posts_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="60dp"/>
        </FrameLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:menu="@menu/navigation_user_menu"></com.google.android.material.navigation.NavigationView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.gradstar.CurvedBottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintEnd_toStartOf = "parent"></com.example.gradstar.CurvedBottomNavigationView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/lin_id"
        android:layout_gravity="bottom|center"
        android:layout_margin="40dp"
        android:background="@drawable/oval"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/home_fab"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            app:elevation="6dp"
            app:vector_src="@drawable/ic_home_black_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/social_fab"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:elevation="6dp"
            app:vector_src="@drawable/ic_group_black_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/jobs_fab"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:elevation="6dp"
            app:vector_src="@drawable/ic_card_jobs_black_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/notification_fab"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:elevation="6dp"
            app:vector_src="@drawable/ic_notifications_black_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/university_fab"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:elevation="6dp"
            app:vector_src="@drawable/ic_school_black_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>