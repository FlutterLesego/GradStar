<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curve2"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/applogo"/>

    <TextView
        android:id="@+id/i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/app_logo"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/employer_card"
        android:layout_width="300dp"
        android:layout_height="180dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/i_am"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="top|center"
            android:src="@drawable/ic_employer"/>

        <TextView
            android:id="@+id/employee_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="An employee"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="top|center"
            android:layout_marginTop="90dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/employee_descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am offering graduate \n programmes"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/student_card"
        android:layout_width="300dp"
        android:layout_height="180dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/employer_card"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="top|center"
            android:src="@drawable/ic_student"/>

        <TextView
            android:id="@+id/student_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A graduate"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="top|center"
            android:layout_marginTop="90dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/student_descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am looking for graduate \n programmes"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            />

    </androidx.cardview.widget.CardView>

</RelativeLayout>